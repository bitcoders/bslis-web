@model IEnumerable<LitmusWeb.Models.ReportDetailsModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*
    Ticket ID       Owner           Date            Remarks
    [BSLIS-41]      Ravi Bhushan    12-02-2024      Added two columns 'AutoReportStartDate', 'AutoReportEndDate'
*@
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Available Reports</h4>
                        <p class="card-description">
                            Master data of <strong>Reports</strong>
                            @Html.ActionLink("Add Report", "Add", new { }, new { @class = " badge badge-add badge-success float-right mdi mdi-plus" })
                        </p>
                        <div id="js-grid-sortable"></div>
                        <table class="table table-bordered display nowrap" id="AnalysisDataTable-Scrollable">
                            <thead class="text-lg-center">
                                <tr>
                                    <th>Action</th>
                                    <th>Code</th>
                                    <th>Name</th>
                                    <th>Format</th>
                                    <th>Is Active</th>
                                    <th>Report Category</th>
                                    <th>Template Name</th>
                                    <th>Template Path</th>
                                    <th>Report Generation Path</th>
                                    <th>Admin Only</th>
                                    <th>Auto Generate (Paperless)</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.ActionLink("Edit", "Edit", new { id = item.Code }, new { @class = "btn btn-xs btn-info" })</td>
                                        <td>@Html.DisplayFor(model => item.Code)</td>
                                        <td>@Html.DisplayFor(model => item.Name)</td>
                                        <td>@Html.DisplayFor(model => item.Formats)</td>
                                        <td>@Html.DisplayFor(model => item.IsActive)</td>
                                        <td>@Html.DisplayFor(model => item.ReportCategory)</td>
                                        <td>@Html.DisplayFor(model => item.TemplateFileName)</td>
                                        <td>@Html.DisplayFor(model => item.TemplatePath)</td>
                                        <td>@Html.DisplayFor(model => item.FileGenerationLocation)</td>
                                        <td>@Html.DisplayFor(model => item.AdminOnly)</td>
                                        <td>@Html.DisplayFor(model => item.AllowAutoGenerate)</td>
                                        <td>@Html.DisplayFor(model => item.Description)</td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

