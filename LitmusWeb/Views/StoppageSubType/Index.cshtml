@model IEnumerable<LitmusWeb.Models.MasterStoppageSubTypeModel>
@{
    ViewBag.Title = "Index Stoppage Sub Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            Stoppage Types
                            @Html.ActionLink("Add New", "Create", "StoppageSubType", new { }, new { @class = "btn btn-success btn-rounded float-right" })
                        </h4>
                        <p class="card-description">
                            Stoppages <small>(List of Stoppage Reasons)</small>
                        </p>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered table-striped text-center">
                                <thead class="table-dark">
                                    <tr>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.Code)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MasterStoppageCode)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SubStoppageGroup)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.StoppageType)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.CreatedBy)
                                        </th>
                                        
                                        <th colspan="2">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MasterStoppageCode)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Code)
                                            </td>
                                            <td nowrap align="left">
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.SubStoppageGroup)  </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StoppageType)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsActive)
                                            </td>
                                            <td nowrap>
                                                @Html.DisplayFor(modelItem => item.CreatedBy)
                                            </td>
                                            <td colspan="2">
                                                <div class="dropdown">
                                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="ddlEdit" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        Actions
                                                    </button>
                                                    <div class="dropdown-menu" aria-labelledby="ddlEdit">
                                                        @Html.ActionLink("Details", "Details", new { id = item.Code }, new { @class = "dropdown-item " })
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.Code }, new { @class = "dropdown-item" })
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.Code }, new { @class = "dropdown-item text-danger", id = "btnDelete" })
                                                    </div>
                                                </div>
                                                    
                                                
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


