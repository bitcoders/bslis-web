@model LitmusWeb.Models.MasterUserModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            <span class="badge badge-info">Details of -<strong>@Model.FirstName @Model.LastName </strong> </span>
                        </h4>
                        <hr />
                        <span>@Html.ActionLink("Back to List", "Index", new { }, new { @class = " badge badge-pill badge-success mdi mdi-step-backward-2 float-left" })</span>
                        <div class="table-responsive pt-3">
                            <table class="table table-striped">
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.CompanyCode)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.CompanyCode)</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.UnitCode)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.UnitCode)</td>
                                </tr>

                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Code)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.Code)</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.FirstName)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.FirstName)</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.LastName)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.LastName)</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.IsActive)</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.CreatedDate)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.CreatedDate)</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.CreatedBy)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.CreatedBy)</td>
                                </tr>

                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.IsDeleted)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.IsDeleted)</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.Email)</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.EmailVerified)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.EmailVerified)</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.MobileNo)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.MobileNo)</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.MobileVerified)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.MobileVerified)</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.EmailNewLetter)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.EmailNewLetter)</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DisplayNameFor(model => model.MobileAlert)
                                    </td>
                                    <td>@Html.DisplayFor(model => model.MobileAlert)</td>
                                </tr>
                            </table>
                        </div>
                        @using (Html.BeginForm("Delete", "User", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken();
                            <div class="form-check-danger">
                                <button type="submit" class="btn btn-danger btn-rounded">Delete</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

