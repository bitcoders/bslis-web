@model IEnumerable<LitmusWeb.Models.RegisteredDevicesModel>
@{
    ViewBag.Title = "List of Registered Devices!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">

                                Registered Devices
                                @Html.ActionLink("Add New", "Add", "RegisteredDevices", new { }, new { @class = "btn btn-success btn-rounded float-right" })
                            </h4>
                            <p class="card-description">
                                <small>List of Registered Deviecs/Users.</small>
                            </p>
                            <div class="table-responsive pt-3">
                                <div id="js-grid-sortable"></div>
                                <table class="table table-bordered table-striped text-center" id="AnalysisDataTable-Scrollable">
                                    <thead class="table-dark">
                                        <tr>
                                            <td>Action</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.Code)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.Gender)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.FirstName)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.LastName)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.UserCode)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.DepartmentName)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.Email)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.MasterDeviceTypeModel.DeviceType)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.UnitRights)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.MenuRights)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.IsActive)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.ValidFrom)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.ValidTill)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.ImageUrl)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.DeviceToken)</td>
                                            <td nowrap>@Html.DisplayNameFor(x => x.AccessToken)</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model)
                                        {
                                        <tr>
                                            <td>@Html.ActionLink("Edit","Edit",new { id=item.Code},new { @class="btn btn-warning", title = "Edit "+item.UserCode})</td>
                                            <td >@Html.DisplayFor(x => item.Code)</td>
                                            <td align="left">@Html.DisplayFor(x => item.Gender)</td>
                                            <td align="left">@Html.DisplayFor(x => item.FirstName)</td>
                                            <td align="left">@Html.DisplayFor(x => item.LastName)</td>
                                            <td align="left">@Html.DisplayFor(x => item.UserCode)</td>
                                            <td align="left">@Html.DisplayFor(x => item.DepartmentName)</td>
                                            <td align="left">@Html.DisplayFor(x => item.Email)</td>
                                            <td>@Html.DisplayFor(x => item.DeviceType)</td>
                                            <td align="left">@Html.DisplayFor(x => item.UnitRights)</td>
                                            <td align="left">@Html.DisplayFor(x => item.MenuRights)</td>
                                            <td>@Html.DisplayFor(x => item.IsActive)</td>
                                            <td>@Html.DisplayFor(x => item.ValidFrom)</td>
                                            <td>@Html.DisplayFor(x => item.ValidTill)</td>
                                            <td align="left">@Html.DisplayFor(x => item.ImageUrl)</td>
                                            <td align="left">@Html.DisplayFor(x => item.DeviceToken)</td>
                                            <td align="left">@Html.DisplayFor(x => item.AccessToken)</td>

                                        </tr>
                                        }
                                    </tbody>
                                </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>