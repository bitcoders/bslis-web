@model IEnumerable<LitmusWeb.Models.UserVerificationModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            User's pending for Email verification
                        </h4>
                        <p class="card-description">
                            Users <small>(List of pending E-mail verification)</small>
                        </p>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered table-striped text-center">
                                <thead class="table-dark">
                                    <tr>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.UnitCode)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.UserCode)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.ActivationLink)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.ActivationValidity)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.ActivatedAt)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.CreatedDate)
                                        </th>
                                        <th colspan="2">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UnitCode)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UserCode)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ActivationLink)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ActivationValidity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ActivatedAt)
                                            </td>
                                            <td nowrap>
                                                @Html.DisplayFor(modelItem => item.CreatedDate)
                                            </td>
                                            <td colspan="2">
                                                <span>
                                                    @Html.ActionLink("Details", "Details", new { code = item.Id }, new { @class = "btn btn-xs btn-info" })
                                                    @Html.ActionLink("Edit", "Edit", new { code = item.Id }, new { @class = "btn btn-xs btn-warning " })
                                                    @Html.ActionLink("Delete", "Delete", new { code = item.Id }, new { @class = "btn btn-xs btn-danger", id = "btnDelete" })
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

