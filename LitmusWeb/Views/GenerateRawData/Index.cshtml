@model LitmusWeb.Models.CustomModels.RawDataDownloadParameters
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">
                                Generate Raw Data
                            </h4>
                            <div class="row">
                                <div class="col-md-12">
                                    @using (Html.BeginForm("Index", "GenerateRawData", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken();
                                        <div class="form-row">
                                            <div class="form-group col-md-4">
                                                @Html.LabelFor(@model=>model.analysisDataCode)
                                                <select id="analysisDataCode" name="analysisDataCode" class="form-control dropdown">
                                                    <option value="1" class="dropdown-item ">Hourly Analysis </option>
                                                    <option value="2" class="dropdown-item ">Two Hourly Analysis</option>
                                                    @*<option value="3" class="dropdown-item  disabled">Massecuite Data</option>
                                                    <option value="4" class="dropdown-item  disabled">Molasses Data</option>
                                                    <option value="5" class="dropdown-item  disabled">Meltings</option>
                                                    <option value="6" class="dropdown-item  disabled">Key Sample</option>*@
                                                    <option value="7" class="dropdown-item ">Stoppage</option>
                                                    <option value="8" class="dropdown-item ">Daily Analyses</option>
                                                    <option value="9" class="dropdown-item">Data Adjustment</option>
                                                    <option value="10" class="dropdown-item">Processed Data</option>
                                                </select>
                                                @Html.ValidationMessageFor(@model => model.analysisDataCode,"", new { @class="text-danger"} )
                                            </div>
                                            <div class="form-group col-md-4">
                                                @Html.LabelFor(@model => model.fromDate)
                                                @Html.EditorFor(@model => model.fromDate, new { htmlAttributes = new { @class = "form-control datepicker", placeholder = "From Date", type = "text" , autocomplete="off" } })
                                                @Html.ValidationMessageFor(@model => model.fromDate, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group col-md-4">
                                                @Html.LabelFor(@model => model.toDate)
                                                @Html.EditorFor(@model => model.toDate, new { htmlAttributes = new { @class = "form-control datepicker", placeholder = "To Date", type = "text", autocomplete = "off" } })
                                                @Html.ValidationMessageFor(@model => model.toDate, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <button type="submit" value="Generate Data" class="btn btn-success">Generate Data</button>
                                        
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
