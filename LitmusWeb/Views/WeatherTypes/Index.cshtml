@model IEnumerable<LitmusWeb.Models.WeatherTypeModel>
@{
    @ViewBag.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            @*@Html.Partial("_PartialAnalysisDefaultValues")*@
            <div class="col-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        @Html.ActionLink("Add New", "Create", new { }, new { @class = "btn btn-success float-right" })
                        <h4 class="card-title">
                            @ViewBag.Title
                        </h4>
                        <p class="card-description">
                            Details
                        </p>
                        <div class="table-responsive pt-3">
                            <table id="weather-listing" class="table table-responsive table-hover">
                                <thead style="text-align:center">
                                    <tr>
                                        <td>Action</td>
                                        <th>Code</th>
                                        <th>Text</th>
                                        <th>Description</th>
                                        <th>IsActive</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.ActionLink("Edit","WeatherTypes",new {@id = item.Code },new{@class="btn btn-warning btn-sm" })</td>
                                                <td style="text-align:center">@Html.DisplayFor(x => item.Code)</td>
                                            
                                            
                                                <td style="text-align:left">@Html.DisplayFor(x => item.Text)</td>
                                            
                                            
                                                <td style="text-align:left">@Html.DisplayFor(x => item.Description)</td>
                                            
                                            
                                                <td style="text-align:center">@Html.DisplayFor(x => item.IsActive)</td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
