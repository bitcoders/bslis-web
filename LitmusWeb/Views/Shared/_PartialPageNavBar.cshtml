<!-- Model window to swith the working unit-->
@if (Session["UserCode"] != null)
{
    @Html.Hidden("_hiddenUserCode", Session["UserCode"].ToString(),new { @id= "_hiddenUserCode" })
}

<div class="modal fade" id="ModalChangeUnit" tabindex="-1" role="dialog" aria-labelledby="ModalChangeUnit" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel-2">Sure To change Working Unit?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure to change your current working unit?</p>
                <select id="ddlAvailableUnits" class="btn btn-primary dropdown-toggle"></select>
            </div>
            <div class="modal-footer">
                <input type="button" id="btnChangeUnit" name="btnChangeUnit" value="Confirm!" class="btn btn-outline-danger" />
                <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


