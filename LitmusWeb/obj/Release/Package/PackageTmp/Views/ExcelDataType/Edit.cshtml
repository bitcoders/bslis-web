
@model LitmusWeb.Models.ExcelReportDataTypeModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="col-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            Excel Data Types
                            @Html.ActionLink("Back To List", "Index", new { }, new { @class = "btn btn-primary btn-sm pull-right", @name = "Create" })
                        </h4>
                        @using (Html.BeginForm("Edit", "ExcelDataType", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group row">
                                <div class="col-md-6">

                                    @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(x => x.Code, new { htmlAttributes = new { @class = "form-control",  @readonly = "true" } })

                                    @Html.ValidationMessageFor(x => x.Code, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <button type="submit" class="btn btn-outline-success">Save Changes</button>
                        }
                    </div>
                </div>
            </div>
        </div>

