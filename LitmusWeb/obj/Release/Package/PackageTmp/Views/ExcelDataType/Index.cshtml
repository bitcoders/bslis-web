@model IEnumerable<LitmusWeb.Models.ExcelReportDataTypeModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            Excel Custom Data Types.
                            @Html.ActionLink("Add", "Create", new { }, new { @class = "btn btn-sm btn-inverse-success float-right", title = "Add new custom data type." })
                        </h4>
                        <div class="d-flex justify-content-center">
                            @*<div id="js-grid-sortable"></div>*@
                            <table class="table table-bordered table-hover display nowrap">
                                <thead class="text-lg-center thead-dark">
                                    <tr>
                                        <th>Code</th>
                                        <th>Name</th>
                                        <th>Created Date</th>
                                        <th>Created By</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        var id = item.Code;
                                    <tr>
                                        <td class="text-center">@Html.DisplayFor(x => @item.Code)</td>
                                        <td>@Html.DisplayFor(x => @item.Name)</td>
                                        <td>@Html.DisplayFor(x => @item.CreatedAt)</td>
                                        <td>@Html.DisplayFor(x => @item.CreatedBy)</td>
                                        <td class="text-center">@Html.ActionLink("Edit", "Edit", "ExcelDataType", new { id }, new { @class = "btn btn-sm btn-outline-warning mr-2" })
                                         @Html.ActionLink("Delete", "Delete", "ExcelDataType", new { id }, new { @class = "btn btn-sm btn-outline-warning" })</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
