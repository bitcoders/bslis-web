@model LitmusWeb.Models.AndroidMenuesModel
@{
    ViewBag.Title = "Add New Mobile App Menue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-description">
                                <span class="mdi mdi-database-edit menu-icon badge badge-info badge-pill">Add New Menue</span>
                                @Html.ActionLink("Back to List", "Index", new { }, new { @class = " badge badge-pill badge-success mdi mdi-step-backward-2 float-right" })
                            </p>
                            @using (Html.BeginForm("Add", "AndroidMenues", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-label-group">
                                            @Html.EditorFor(x => x.Code, new { htmlAttributes = new { @class = "form-control", placeholder = "Code" } })
                                            @Html.LabelFor(x => x.Code)
                                            @Html.ValidationMessageFor(x => x.Code, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-label-group">
                                            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                                            @Html.LabelFor(x => x.Name)
                                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-label-group">
                                            @Html.EditorFor(x => x.DisplayText, new { htmlAttributes = new { @class = "form-control", placeholder = "Display Text" } })
                                            @Html.LabelFor(x => x.DisplayText)
                                            @Html.ValidationMessageFor(x => x.DisplayText, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-label-group">
                                            @Html.EditorFor(x => x.ReportHeader, new { htmlAttributes = new { @class = "form-control", placeholder = "Report Header" } })
                                            @Html.LabelFor(x => x.ReportHeader)
                                            @Html.ValidationMessageFor(x => x.ReportHeader, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-label-group">
                                            @Html.EditorFor(x => x.ControllerName, new { htmlAttributes = new { @class = "form-control", placeholder = "MVC Controller Name" } })
                                            @Html.LabelFor(x => x.ControllerName)
                                            @Html.ValidationMessageFor(x => x.ControllerName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-label-group">
                                            @Html.EditorFor(x => x.ActionName, new { htmlAttributes = new { @class = "form-control", placeholder = "MVC Action Name" } })
                                            @Html.LabelFor(x => x.ActionName)
                                            @Html.ValidationMessageFor(x => x.ActionName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="col-md-12">
                                        <div class="form-label-group">
                                            @Html.EditorFor(x => x.IconUrl, new { htmlAttributes = new { @class = "form-control", placeholder = "Icon Url" } })
                                            @Html.LabelFor(x => x.IconUrl)
                                            @Html.ValidationMessageFor(x => x.IconUrl, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-12">
                                        <div class="form-label-group">
                                            @Html.EditorFor(x => x.ApiUrl, new { htmlAttributes = new { @class = "form-control", placeholder = "Api Url" } })
                                            @Html.LabelFor(x => x.ApiUrl)
                                            @Html.ValidationMessageFor(x => x.ApiUrl, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-12">
                                        @Html.CheckBoxFor(x => x.IsActive, new { htmlAttributes = new { @class = "form-control", placeholder = "Is Active" } })
                                        @Html.LabelFor(x => x.IsActive)
                                        @Html.ValidationMessageFor(x => x.IsActive, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-12">
                                        <input type="submit" id="btnSubmit" name="btnSubmit" value="Save Changes" class="btn btn-inverse-success" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <link href="~/Content/MainContent/css/floating-labels.css" rel="stylesheet" />
