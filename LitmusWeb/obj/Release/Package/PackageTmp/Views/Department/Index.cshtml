@model IEnumerable<LitmusWeb.Models.MasterDepartmentModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            Registered Departments
                            @Html.ActionLink("Add New", "Create", "Department", new { }, new { @class = "btn btn-success btn-rounded float-right" })
                        </h4>
                        <p class="card-description">
                            Departments <small>(Details of Departments)</small>
                        </p>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered table-striped text-center">
                                <thead class="table-dark">
                                    <tr>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.Code)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.CreatedDate)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.CreatedBy)
                                        </th>
                                        <th nowrap>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Code)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsActive)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedBy)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Code }, new { @class = "btn btn-xs btn-info" })
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Code }, new { @class = "btn btn-xs btn-danger", id = "btnDelete" })

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
