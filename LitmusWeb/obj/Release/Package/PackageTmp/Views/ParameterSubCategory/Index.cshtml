@model IEnumerable<LitmusWeb.Models.MasterParameterSubCategoryModel>
@{
    ViewBag.Title = "Index Parameter Sub Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            Parameter Types
                            @Html.ActionLink("Add New", "Create", "ParameterSubCategory", new { }, new { @class = "btn btn-success btn-rounded float-right" })
                        </h4>
                        <p class="card-description">
                            Parameters <small>(List of Parameter Category)</small>
                        </p>
                        @*<div class="table-responsive pt-3">*@
                            <div id="js-grid-sortable"></div>
                            <table class="table table-bordered table-striped text-center" id="order-listing">
                                <thead class="table-dark">
                                    <tr>
                                        <td>
                                            @Html.DisplayNameFor(model => model.MasterParameterCategory.Name)
                                        </td>
                                        <td >
                                            @Html.DisplayNameFor(model => model.Code)
                                        </td>
                                        <td >
                                            @Html.DisplayNameFor(model => model.Name)
                                        </td>
                                        <td >
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </td>
                                        <td >
                                            @Html.DisplayNameFor(model => model.CreatedBy)
                                        </td>
                                        <td>Action</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MasterCategoryName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Code)
                                            </td>
                                            <td >
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsActive)
                                            </td>
                                            <td >
                                                @Html.DisplayFor(modelItem => item.CreatedBy)
                                            </td>
                                            <td >
                                                
                                                    @Html.ActionLink("Details", "Details", new { id = item.Code }, new { @class = "btn btn-sm btn-inverse-info" })
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.Code }, new { @class = "btn btn-sm btn-inverse-warning " })
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.Code }, new { @class = "btn btn-sm btn-inverse-danger", id = "btnDelete" })
                                               
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


