@model IEnumerable<LitmusWeb.Models.ReportDetailsModel>
@{
    ViewBag.Title = "UploadExcelFileTemplate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        @using (Html.BeginForm("DownloadReportData", "ExcelReportTemplate", FormMethod.Post))
        {
            <div class="row">
                <div class="col-12 grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">
                                List of Templates
                                @Html.ActionLink("Create New Template", "UploadExcelFileTemplate", "ExcelReportTemplate", new { }, new { @class = "btn btn-sm btn-inverse-success float-right", title = "Add new custom data type." })
                            </h4>
                            <p class="card-description">(List of report templates to be used to generat reports using uploaded 'Excel File'.)</p>

                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-lg-12 table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Action</th>
                                                <th>Report Code</th>
                                                <th>Report Name</th>
                                                <th>Report Categ.</th>
                                                <th>Template Name</th>
                                                <th>Template Path</th>
                                                <th>Is Active</th>
                                                <th>Description</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var i in Model)
                                            {
                                                <tr>
                                                    <td>@Html.ActionLink("Edit", "Edit", "ExcelReportTemplate", new { id = i.Code }, new { @class = "btn btn-sm btn-warning" })</td>
                                                    <td>@Html.DisplayFor(@x => i.Code)</td>
                                                    <td>@Html.DisplayFor(@x => i.Name)</td>
                                                    <td>@Html.DisplayFor(@x => i.ReportCategory)</td>
                                                    <td>@Html.DisplayFor(@x => i.TemplateFileName)</td>
                                                    <td>@Html.DisplayFor(@x => i.TemplatePath)</td>
                                                    <td>@Html.DisplayFor(@x => i.IsActive)</td>
                                                    <td>@Html.DisplayFor(@x => i.Description)</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

