@using System.Web.Optimization;
@model LitmusWeb.Models.MasterUnitAuthorityModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-panel" ng>
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            <span class="mdi mdi-database-plus menu-icon badge badge-info badge-pill">New Company Details</span>
                            @Html.ActionLink("Back to List", "Index", new { }, new { @class = " badge badge-pill badge-success mdi mdi-step-backward-2 float-right" })
                        </p>
                        @using (Html.BeginForm("Create","UnitAuthority",FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="forms-sample">
                                <div class="form-group">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.UnitCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Unit Code" } })
                                        @Html.ValidationMessageFor(model => model.UnitCode, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control ", placeholder = "Name" } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control", placeholder = "Designation" } })
                                            @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.valid_from, new { htmlAttributes =  new{ @class = "form-control", id = "txtValidFrom", placeholder = "Valid From" } })
                                            @Html.ValidationMessageFor(model => model.valid_from, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.valid_till, new { htmlAttributes = new { @class = "form-control", id="txtValidTill", placeholder = "Valid From" } })
                                            @Html.ValidationMessageFor(model => model.valid_till, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <input type="submit" id="btnSave" value="Save" class="btn btn-success btn-rounded" />
                                </div>
                            </div>
                        }
                        <div id="validationMessage" class="alert alert-danger" hidden="hidden"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
