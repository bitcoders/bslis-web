@model IEnumerable<LitmusWeb.Models.MasterUnitModel>

@{
    ViewBag.Title = "Index";
    ViewBag.ContentHeading = "Unit Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Static Table Start -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            Registered Units
                            @Html.ActionLink("Add New", "Create", "Unit", new { }, new { @class = "btn btn-success btn-rounded float-right" })
                        </h4>
                        <p class="card-description">
                            Unit Details <small>(Details of all Units)</small>
                        </p>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.Code)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.Address)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.CrushingSeason)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.NewMillCapacity)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.OldMillCapacity)
                                        </th>
                                        <th class="nowrap">
                                            @Html.DisplayNameFor(model=> model.AllowedModificationDays)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </th>
                                        <th nowrap>
                                            @Html.DisplayNameFor(model => model.CreatedDate)
                                        </th>
                                        <th nowrap>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CrushingSeason)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NewMillCapacity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OldMillCapacity)
                                        </td> 
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AllowedModificationDays)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsActive)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedDate)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Details", "Details", new { id = item.Code },new { @class="btn btn-xs btn-info"})
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


