</head>
<body class="text-center">
    @using (Html.BeginForm("VerifyUser", "UserVerification", FormMethod.Post, new { @class = "form-signin" }))
    {
        @Html.AntiForgeryToken()
        var x = Request.Url.Segments[3].ToString().Replace("/", "");
        @Html.Hidden("UserCode", x);
        
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4" id="headerText"></h1>
                <p class="lead"><span id="statusMessage"></span></p>
            </div>
        </div>
    }

</body>
</html>



