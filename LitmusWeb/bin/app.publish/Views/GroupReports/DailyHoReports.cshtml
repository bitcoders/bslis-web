@model LitmusWeb.Models.CustomModels.DailyReportViewModel
@{
    ViewBag.Title = "Group Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        @*<div class="row">
                @Html.Partial("_PartialAnalysisDefaultValues")
            </div>*@
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            Group Reports
                        </h4>
                        @*<p class="card-description">
                            Report is available from
                            <span id="spanFromDate" class="text-danger"></span>
                            to
                            <span id="spanToDate" class="text-danger"></span>
                        </p>*@
                        <div class="row">
                            <div class="col-md-12">

                                @using (Html.BeginForm("DailyHoReports", "GroupReports", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("_hiddenUnitCode", Session["BaseUnitCode"]);
                                    @Html.Hidden("_hiddenSeasonCode", Session["CrushingSeason"]);
                                    @Html.Hidden("_hiddenUserCode", Session["UserCode"]);
                                <div class="form-row">
                                    @*<div class="form-group col-md-3">
                                        <label class="label">Sugar Unit</label>
                                        <select id="reportUnit" name="reportUnit" required="required" class="form-control" style="border: 1px solid #999">
                                            <option value="0">--select unit--</option>
                                        </select>
                                    </div>*@
                                    <div class="form-group col-md-4">
                                    <label class="label">Season Year</label>
                                        <select id="season_code" name="season_code" class="form-control" style="border: 1px solid #999" required="required">
                                            <option value="0">---Select a Season---</option>
                                            @foreach (var x in Model.masterSeasonsModel)
                                            {
                                                if (x.SeasonCode == (int)Session["CrushingSeason"])
                                                {
                                                    <option value="@x.SeasonCode" selected="selected">@x.SeasonYear</option>
                                                }
                                                else
                                                {
                                                    <option value="@x.SeasonCode">@x.SeasonYear</option>
                                                }

                                            }
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="label">Report Date</label>
                                        <input type="text" id="txtReportDate" required="required" name="txtReportDate" class="form-control datepicker" placeholder="YYYY-MM-DD" autocomplete="off" />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="label">Report Name</label>
                                        <select id="report_name" name="report_name" class="form-control" style="border: 1px solid #999" required="required">
                                            <option value="0">---Select a Report---</option>
                                            @foreach (var x in Model.reportDetailsModel)
                                            {
                                                <option value="@x.Code">@x.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <input type="submit" class="btn btn-inverse-primary float-right" value="Execute" />
                                    </div>
                                </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section scripts{
        <script src="~/Scripts/Ajax/dailyReportAjax1.0.js"></script>
        <script src="~/Scripts/Reports/dailyReport-1.1.js"></script>
    }
