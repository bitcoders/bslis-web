
@{
    ViewBag.Title = "MontlyRainFallReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">

                            <nav class="navbar navbar-expand-lg navbar-light bg-primary">
                                <div class="collapse navbar-collapse" id="navbar-rainfall">
                                    <ul class="navbar-nav mr-auto">
                                        <li class="nav-item active">
                                            @Html.ActionLink("Add New", "add", new { }, new { @class = "nav-link" })
                                        </li>
                                        <li class="nav-item">
                                            @Html.ActionLink("Reports", "MontlyRainFallReport", new { }, new { @class = "nav-link" })
                                        </li>
                                    </ul>
                                </div>
                            </nav>
                        </h4>
                        @Html.BeginForm("MonthlyRainFallReport", "WeatherRecordsController", FormMethod.Post)
                        {
                        @Html.AntiForgeryToken()
                        <p class="card-description">
                            Year wise monthly rain fall details.
                        </p>
                        <div class="form-group row">
                            <div class="col-sm-2">
                                <label for="txtReportFromDate" class="col-form-label">Year From</label>
                            </div>
                            <div class="col-sm-3">
                                <input type="text" id="txtReportFromDate" name="txtReportFromDate" class="form-control yearpicker" readonly="readonly" placeholder="From Year" />
                            </div>
                            <div class="col-sm-2">
                                <label for="txtReportToDate" class="col-form-label">Year To</label>
                            </div>
                            <div class="col-sm-3">
                                <input type="text" id="txtReportToDate" name="txtReportToDate" class="form-control yearpicker" placeholder="To Year" readonly="readonly" />
                            </div>
                            <div class="col-sm-2">
                                <input type="submit" id="btnSubmit" name="btnSubmit" class="btn btn-success" />
                            </div>
                        </div>
                        }

                    </div>
                    </div>
                </div>
            </div>
        </div>
