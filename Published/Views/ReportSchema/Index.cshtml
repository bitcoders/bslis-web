            <!-- Display existing Items in report-->
            <div class="row">
                <div class="col-12 grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">
                                Excel Report Template.<code> @Model.Select(x => x.Code).FirstOrDefault()</code>
                                @Html.ActionLink("Add", "Create", new { }, new { @class = "btn btn-sm btn-inverse-success float-right", title = "Add new custom data type." })
                            </h4>
                            <div id="js-grid-sortable"></div>
                            <table class="table table-bordered display nowrap" id="AnalysisDataTable-Scrollable">
                                <thead class="text-lg-center">
                                    <tr>
                                        <th>Code</th>
                                        <th>Schema Object Name</th>
                                        <th>Description</th>
                                        <th>Search keywords</th>
                                        <th>Created Date</th>
                                        <th>Created By</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center">@Html.DisplayFor(x => @item.Code)</td>
                                            <td>@Html.DisplayFor(x => @item.SysObjectName)</td>
                                            <td>@Html.DisplayFor(x => @item.SysObjectDescripton)</td>
                                            <td>@Html.DisplayFor(x => @item.SearchKeywords)</td>
                                            <td>@Html.DisplayFor(x => @item.CreatedDate)</td>
                                            <td>@Html.DisplayFor(x => @item.CreatedBy)</td>
                                            <td>@Html.ActionLink("Schema Columns", "Index", "ReportSchemaColumn", new { id = item.Code }, new { @class = "btn btn-sm btn-inverse-warning" })</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
