@model IEnumerable<LitmusWeb.Models.MeltingAnalysModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            @Html.Partial("_PartialAnalysisDefaultValues")
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            Melting Analysis <small>(Entries for the day)</small>
                            @Html.ActionLink("Add New", "Create", new { }, new { @class = "btn btn-sm btn-inverse-success float-right", title = "Add a new Molasses Analysis" })
                        </h4>
                        <div id="js-grid-sortable"></div>
                        <table class="table table-bordered display nowrap" id="AnalysisDataTable-Scrollable">
                            <thead class="text-lg-center">
                                <tr>
                                    <td>Action</td>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Melting Type</th>
                                    <th>Brix</th>
                                    <th>Pol</th>
                                    <th>Purity</th>
                                    <th>Icumsa Unit</th>
                                    <th>Created Date</th>
                                    <th>Created By</th>
                                    <th>Updated Date</th>
                                    <th>Updated By</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = i.id }, new { @class = "btn btn-sm btn-inverse-warning" })
                                        </td>
                                        <td>@Html.DisplayFor(x => i.entry_date)</td>
                                        <td>@Html.DisplayFor(x => i.entry_time)</td>

                                        <td>@Html.DisplayFor(x => i.melting_name)</td>
                                        <td>@Html.DisplayFor(x => i.brix)</td>
                                        <td>@Html.DisplayFor(x => i.pol)</td>
                                        <td>@Html.DisplayFor(x => i.purity)</td>
                                        <td>@Html.DisplayFor(x => i.icumsa_unit)</td>
                                        <td>@Html.DisplayFor(x => i.crtd_dt)</td>
                                        <td>@Html.DisplayFor(x => i.crtd_by)</td>
                                        <td>@Html.DisplayFor(x => i.updt_dt)</td>
                                        <td>@Html.DisplayFor(x => i.updt_by)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


