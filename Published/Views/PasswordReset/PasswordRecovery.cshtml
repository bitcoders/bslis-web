@model LitmusWeb.Models.CustomModels.PasswordChangeViewModel
    @using System.Web.Optimization
@{
    Layout = null;
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Password Rest</title>
    <link rel="stylesheet" href="~/Content/mainContent/vendors/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/mainContent/vendors/jquery-bar-rating/fontawesome-stars-o.css">
    <link rel="stylesheet" href="~/Content/mainContent/vendors/jquery-bar-rating/fontawesome-stars.css">
    <link rel="stylesheet" href="~/Content/mainContent/vendors/x-editable/bootstrap-editable.css">

    <link rel="stylesheet" href="~/Content/mainContent/vendors/tempusdominus-bootstrap-4/tempusdominus-bootstrap-4.min.css">

    <link rel="stylesheet" href="~/Content/MainContent/css/vertical-layout-light/style.min.css">


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/mainContent/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Content/mainContent/vendors/base/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Content/mainContent/vendors/datatables.net-bs4/dataTables.bootstrap4.css">

    <style>
        .footer {
            position: absolute;
            left: 0;
            bottom: 0;
            height: 80px;
            width: 100%;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="jumbotron">
            <h4 class="display-4" id="jumboHeader">Reset Your Password</h4>
            <p class="lead" id="jumboLead"></p>
            <hr class="my-4" />
            <div id="divforgotpassword">

            </div>
            @using (Html.BeginForm())
            {
                //"PasswordRecovery", "PasswordReset", FormMethod.Post
                string _token = Convert.ToString(ViewBag.token);
                @Html.AntiForgeryToken()
                @Html.Hidden("FirstString", _token)
                <div class="row" id="passwordDiv">
                    <div class="col-sm-2">
                        @Html.LabelFor(@x => x.Password, new { @class = "label label-default" })
                    </div>
                    <div class="col-sm-3">

                        @Html.EditorFor(@x => x.Password, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                        @Html.ValidationMessageFor(@x => x.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-2">
                        @Html.LabelFor(@x => x.ConfirmPassword, new { @class = "label label-default" })
                    </div>
                    <div class="col-sm-3">
                        @Html.EditorFor(@x => x.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                        @Html.ValidationMessageFor(@x => x.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-2">
                        <button type="button" id="btnsubmit" class="btn btn-primary">Change Password</button>
                    </div>
                </div>
            }
        </div>

        <footer class="footer">

            <div class="d-sm-flex justify-content-center justify-content-sm-between">
                <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">

                    Copyright © @DateTime.Now.Year <a href="http://www.birla-sugar.com/" target="_blank">
                        Birla Sugar
                    </a>
                </span>

                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted for <a href="http://www.birla-sugar.com/" target="_blank">Birla Sugar</a>  & designed with <i class="mdi mdi-heart text-danger"></i> by<a href="http://technorator.com/" target="_blank">Technorator</a></span>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/Bundles/scriptBundle_initialScripts")
    @*<script src="~/Scripts/jquery-3.4.1.min.js"></script>*@
    <script src="~/Content/MainContent/vendors/sweetalert/sweetalert.min.js"></script>
    <script src="~/Scripts/js/modal-demo.js"></script>
    <script src="~/Scripts/js/alerts.js"></script>
    <script src="~/Scripts/SugarAnalysisJs/PasswordReset-1.2.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>

</html>
