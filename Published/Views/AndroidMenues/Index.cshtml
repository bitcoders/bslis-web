@model IEnumerable<LitmusWeb.Models.AndroidMenuesModel>
@{
    ViewBag.Title = "Android Menues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">

                                Mobile App Menues
                                @Html.ActionLink("Add New", "Add", "AndroidMenues", new { }, new { @class = "btn btn-success btn-rounded float-right" })
                            </h4>
                            <p class="card-description">
                                <small>List of Mobile App Menues.</small>
                            </p>
                            <div class="table-responsive pt-3">
                            <div id="js-grid-sortable"></div>
                            <table class="table table-bordered table-striped text-center" id="order-listing">
                                <thead class="table-dark">
                                    <tr>
                                        <td>Action</td>
                                        <td>@Html.DisplayNameFor(model => model.Code)</td>
                                        <td>@Html.DisplayNameFor(model => model.Name)</td>
                                        <td>@Html.DisplayNameFor(model => model.DisplayText)</td>
                                        <td>@Html.DisplayNameFor(model => model.ReportHeader)</td>
                                        <td>@Html.DisplayNameFor(model => model.IconUrl)</td>
                                        <td>@Html.DisplayNameFor(model => model.ControllerName)</td>
                                        <td>@Html.DisplayNameFor(model => model.ActionName)</td>
                                        <td>@Html.DisplayNameFor(model => model.ApiUrl)</td>
                                        <td>@Html.DisplayNameFor(model => model.IsActive)</td>
                                        <td>@Html.DisplayNameFor(model => model.CreatedAt)</td>
                                        <td>@Html.DisplayNameFor(model => model.CreatedBy)</td>
                                    </tr>
                                </thead>
                                <tbody class="overflow-auto">
                                    @foreach(var item in Model)
                                    {
                                    <tr>
                                        <td>@Html.ActionLink("Edit","Edit",new { id=item.Code},new { @class="btn btn-warning", @title = "Edit \""+item.Name+"\""})</td>
                                        <td>@Html.DisplayFor(x => item.Code)</td>
                                        <td align="left">@Html.DisplayFor(x => item.Name)</td>
                                        <td align="left">@Html.DisplayFor(x => item.DisplayText)</td>
                                        <td align="left">@Html.DisplayFor(x => item.ReportHeader)</td>
                                        <td align="left">@Html.DisplayFor(x => item.IconUrl)</td>
                                        <td align="left">@Html.DisplayFor(x => item.ControllerName)</td>
                                        <td align="left">@Html.DisplayFor(x => item.ActionName)</td>
                                        <td align="left">@Html.DisplayFor(x => item.ApiUrl)</td>
                                        <td align="left">@Html.DisplayFor(x => item.IsActive)</td>
                                        <td align="left">@Html.DisplayFor(x => item.CreatedAt)</td>
                                        <td align="left">@Html.DisplayFor(x => item.CreatedBy)</td>
                                    </tr>
                                    }
                                </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>

