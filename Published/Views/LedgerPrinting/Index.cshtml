@*@model IEnumerable<LitmusWeb.Models.ProcLedgerPageOneModel>*@
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        <!-- Custom dashboard Starts Here-->
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="form-inline">
                        <div class="col-sm-6">
                            @using (Html.BeginForm("GetFile", "LedgerPrinting", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken();
                                <label for="reportDate" class="sr-only">Report Date</label>
                                <div class="input-group mb-2 mr-sm-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fa fa-calendar-check-o"></i></div>
                                        @Html.TextBox("reportDate", null, new { @class = "form-control datepicker mr-2", @autocomplete = "off" })
                                    </div>
                                    <button type="submit" value="Generate File" class="btn btn-primary mr-2">Generate Ledger</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            
        </div>
    </div>
    
    <script>
        (function () {
            var textFile = null,
                makeTextFile = function (text) {
                    var data = new Blob([text], { type: 'text/plain' });

                    // If we are replacing a previously generated file we need to
                    // manually revoke the object URL to avoid memory leaks.
                    if (textFile !== null) {
                        window.URL.revokeObjectURL(textFile);
                    }
                    textFile = window.URL.createObjectURL(data);

                    return textFile;
                };
            var create = document.getElementById('create'),
                textbox = document.getElementById('textbox');

            create.addEventListener('click', function () {
                var link = document.getElementById('downloadlink');
                link.href = makeTextFile(textbox.value);
                link.style.display = 'block';
            }, false);
        })();

    </script>

    <style>
        textarea{
            white-space:nowrap;
            overflow-x:auto;
            overflow-y:auto;
            overflow:auto;
        }
    </style>
